<li class="nav-item dropdown px-3 d-flex align-items-center">
    <a class="nav-link text-body p-0" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-language cursor-pointer"></i>
    </a>
    <ul class="dropdown-menu dropdown-menu-end px-2 py-3 me-sm-n4" aria-labelledby="dropdownMenuButton">
        {% for i18n in locales %}
            {% if locale() != i18n.code %}
                <li class="mb-2">
                    <a class="dropdown-item border-radius-md" href="{{ path_for('translate.switch', {lang: i18n.code}) }}">
                        <div class="d-flex py-1">
                            <div class="my-auto">
                                <img src="{{ base_url() }}/public/assets/ic_flag_{{ i18n.iso }}.svg" class="avatar avatar-sm bg-gradient-dark me-3" alt="icon for selecting language">
                            </div>
                            <div class="d-flex flex-column justify-content-center">
                                <h6 class="text-sm font-weight-normal mb-1">
                                    <span class="font-weight-bold">
                                        {{ i18n.name }}
                                    </span>
                                </h6>
                            </div>
                        </div>
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</li>
